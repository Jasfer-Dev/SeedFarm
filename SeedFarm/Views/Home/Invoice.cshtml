@model SeedFarm.Models.BillDescriptionViewModel
@{
    ViewBag.Title = "Invoice";
    Layout = null;
}



<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/css/bootstrap.css'>

<h2>Invoice</h2>

<div class="container">
    <div class="card">
        <div class="card-header" style="text-align:center">
            <span class="float-right"> <strong>Bill No:</strong> @Model.BillId</span>
            <span class="center"> <strong>CASH/CREDIT BILL</strong></span>
            <span class="float-left"> <strong>Date:</strong> @Model.BillDate.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="card-body">
            <div class="row mb-4" style="border-bottom: 1px groove;">
                <div class="col-sm-6" style="border-right: 1px groove;">
                    <h6 class="mb-3">From:</h6>
                    <div style="margin-bottom: -20px;">
                        <img style="width:150px;" src="../Images/nEWlOGO.png" />
                    </div>
                    <strong>KUMAR AGRO TECH </strong>
                    <div>1/114, Main Road, Ottapidaram-628 401.</div>
                    <div>Thoothukudi (Dist).</div>
                </div>
                <div class="col-sm-6">
                    <h6 class="mb-3">To:</h6>
                    <div>
                        <strong>@Model.CustomerName</strong>
                    </div>
                    <div>@Model.FatherName</div>
                    <div>@Model.Address</div>
                    <div>@Model.City, @Model.State</div>
                </div>

                <div class="col-sm-6" style="border-right: 1px groove;">
                    <div>
                        <span>GSTN No: 33AAJFK7248K1ZZ</span>
                        <span class="float-right"> Seed Lic No: 1487/VNR/2017</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div style="display: flex;">
                        <div style="width: 50%;">TIN No:</div>
                        <span class="float-right"> Seed Lic No:</span>
                    </div>
                </div>

                <div style="width:100%;text-align:center;border-top:1px groove;">
                    Seed Proccess Unit : 4/57-A, Main Road, Sillanatham - 628 402. Seed Lic. No.: 1487/VNR/2017
                </div>
            </div>
            @{var i = 0; long total = 0; }
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Description</th>
                            <th class="right">Packing</th>
                            <th class="center">Rate Per Packing</th>
                            <th class="right">No. of Packing</th>
                            <th class="right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var m in Model.BillDescList)
                        {
                            i++;
                            <tr>
                                <td class="center">@i</td>
                                <td class="left strong">@m.Description</td>
                                <td class="left">@m.Packing</td>
                                <td class="right">@m.RatePerPacking</td>
                                <td class="center">@m.NoOfPacking</td>
                                <td class="right">@m.Amount</td>
                            </tr>

                            if (total == 0)
                            {
                                total = Convert.ToInt64(@m.Amount);
                            }
                            else
                            {
                                total += Convert.ToInt64(@m.Amount);
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>@total</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <ul class="actions">
                <li><a onclick="printDiv('divBilling')" class="button scrolly">Print</a></li>
            </ul>

        </div>
    </div>
</div>